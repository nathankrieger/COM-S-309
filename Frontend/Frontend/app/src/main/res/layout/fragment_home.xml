<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context="com.example.frontend.HomeFragment">

    <TextView
        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

   <!-- <TextView
        android:id="@+id/main_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{{username}}"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/main_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{{password}}"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:textColor="#000000"/>-->

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#007bff"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/main_signup_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#28a745"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/bookmarks_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bookmarks"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#ffc107"
        android:visibility="gone"/>  <!-- Initially hidden -->

</LinearLayout>
