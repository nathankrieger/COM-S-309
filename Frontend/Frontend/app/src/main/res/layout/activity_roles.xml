<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Roles"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/role_name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Role Name"
        android:padding="12dp" />

    <EditText
        android:id="@+id/role_id_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Role ID (for Update/Delete)"
        android:padding="12dp" />

    <Button
        android:id="@+id/create_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Role"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/read_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Role"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/update_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Role"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/delete_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Role"
        android:layout_marginTop="8dp" />

</LinearLayout>